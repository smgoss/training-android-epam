<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal" 
    android:background="@drawable/list_item_background_selector">

    <ImageView
        android:layout_width="80dp"
        android:layout_height="80dp"
        android:padding="5dp"
        android:scaleType="center"
        android:src="@drawable/ic_action_my_list" />

    <LinearLayout
        android:layout_width="wrap_content"
        android:layout_height="fill_parent"
        android:orientation="vertical" >

        <TextView
            android:id="@+id/myLayoutListTextViewBig"
            style="@style/TextViewBlue"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:paddingBottom="10dp"
            android:text="TextView" />

        <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="fill_parent"
            android:orientation="horizontal" >

            <TextView
                android:id="@+id/myLayoutListTextViewNumber"
                style="@style/TextViewRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="10dp"
                android:paddingLeft="5dp"
                android:paddingRight="5dp"
                android:text="12"
                android:background="@drawable/num_background" />

            <TextView
                android:id="@+id/myLayoutListTextViewStandart"
                style="@style/TextViewRed"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Large Text" />
        </LinearLayout>
    </LinearLayout>

</LinearLayout>