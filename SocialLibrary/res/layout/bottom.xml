<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="fill_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/bg_bottom_bar_blue" >

    <ImageView
        android:id="@+id/homeButton"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/btn_bottom_home" />

    <ImageView
        android:id="@+id/favoriteButton"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/btn_bottom_star" />

    <ImageView
        android:id="@+id/messagesButton"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/btn_bottom_message" />

    <ImageView
        android:id="@+id/searchButton"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/btn_bottom_search" />

    <ImageView
        android:id="@+id/tweetButton"
        android:layout_width="0dip"
        android:layout_height="wrap_content"
        android:layout_weight="1"
        android:src="@drawable/btn_bottom_add" />

</LinearLayout>