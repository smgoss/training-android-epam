<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AccountTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/blue</item>
    </style>

    <style name="TextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
    </style>

    <style name="AddAccountButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">20sp</item>
    </style>

    <style name="ProfileButtons" parent="@style/AddAccountButtonStyle">
        <item name="android:background">@drawable/btn_profile</item>
    </style>

    <style name="CustomTabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/vpi__tab_indicator</item>
    </style>

    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/list_item</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0px</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="TextViewWhite" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewWhiteBig" parent="@style/TextViewWhite">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextViewWhiteSmall" parent="@style/TextViewWhite">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TextViewRed" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextViewBlue" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/deep_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Toast" parent="MatchParent">
        <item name="android:background">@drawable/bg_toast</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">25dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Toast_Title" parent="WrapContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="Toast_Text" parent="WrapContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomBar">
        <item name="android:background">@drawable/bg_bottom_bar_blue</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomButton" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ItemUserName" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/user_name</item>
        <item name="android:textSize">16sp</item>
    </style>

    <style name="ItemTime" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/time</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ItemText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/item_text</item>
        <item name="android:textSize">13sp</item>
    </style>

</resources>