<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical" >

    <View
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.14" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="0dip"
        android:layout_gravity="center_horizontal"
        android:layout_weight="0.10"
        android:text="@string/app_name"
        android:textColor="@color/blue"
        android:textSize="22sp" />

    <LinearLayout
        android:id="@+id/accountLayout"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" >
    </LinearLayout>

    <fragment
        android:name="com.epam.android.social.fragments.AddAccountsFragment"
        android:layout_width="match_parent"
        android:layout_height="0dip"
        android:layout_weight="0.23" />

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="0dip"
        android:layout_weight="0.52"
        android:gravity="center_horizontal"
        android:orientation="vertical" >

        <Button
            style="@style/AddAccountButtonStyle"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_splash"
            android:onClick="onAddAccountClick"
            android:text="@string/add_account_button" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0dip"
            android:layout_weight="1" />

        <ImageView
            android:layout_width="fill_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/bg_circles" />
    </LinearLayout>

</LinearLayout>