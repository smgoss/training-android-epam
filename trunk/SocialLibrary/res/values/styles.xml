<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="AccountTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/user_name</item>
    </style>

    <style name="ButtonStyle" parent="@android:style/Widget.Button">
        <item name="android:textColor">@color/white</item>
        <item name="android:textSize">14sp</item>
        <item name="android:background">@drawable/btn</item>
    </style>

    <style name="ProfileButton" parent="@style/ButtonStyle">
        <item name="android:background">@drawable/btn_profile</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingLeft">30dp</item>
        <item name="android:paddingRight">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingBottom">10dp</item>
    </style>

    <style name="TabPageIndicator" parent="Widget.TabPageIndicator">
        <item name="android:background">@drawable/vpi__tab_indicator</item>
        <item name="android:gravity">center</item>
        <item name="android:textColor">@color/tab_text</item>
        <item name="android:textSize">12sp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:maxLines">1</item>
        <item name="android:paddingTop">10dp</item>
    </style>


    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/list_item</item>
        <item name="android:divider">@android:color/transparent</item>
        <item name="android:dividerHeight">0px</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:fadingEdge">none</item>
        <item name="android:cacheColorHint">@android:color/transparent</item>
    </style>

    <style name="TextViewWhite" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewWhiteBig" parent="@style/TextViewWhite">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextViewWhiteSmall" parent="@style/TextViewWhite">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TextViewRed" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextViewBlue" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/deep_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="Toast" parent="MatchParent">
        <item name="android:background">@drawable/bg_toast</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">25dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Toast_Title" parent="WrapContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="Toast_Text" parent="WrapContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="WrapContent">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

    <style name="BottomBar">
        <item name="android:background">@drawable/bg_bottom_bar_blue</item>
        <item name="android:layout_width">fill_parent</item>
        <item name="android:shadowColor">@android:color/transparent</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:gravity">center_vertical</item>
    </style>

    <style name="BottomButton" parent="@android:style/Widget.ImageButton">
        <item name="android:layout_width">0dip</item>
        <item name="android:layout_height">wrap_content</item>
        <item name="android:layout_weight">1</item>
        <item name="android:background">@color/transparent</item>
    </style>

    <style name="ItemUserName" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/user_name</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ItemTime" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/time</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="ItemText" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/item_text</item>
        <item name="android:textSize">13sp</item>
    </style>

    <style name="EditTextStyle" parent="@android:style/Widget.EditText">
        <item name="android:background">@drawable/edit_text</item>
        <item name="android:textSize">15sp</item>
    </style>

    <style name="ListItem">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
        <item name="android:orientation">horizontal</item>
        <item name="android:paddingBottom">10dp</item>
        <item name="android:paddingTop">10dp</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
    </style>

    <style name="Avatar">
        <item name="android:layout_width">50dp</item>
        <item name="android:layout_height">50dp</item>
        <item name="android:background">@drawable/bg_shadow_photo</item>
        <item name="android:paddingBottom">1dp</item>
    </style>

    <style name="Divider">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">1px</item>
        <item name="android:paddingRight">15dp</item>
        <item name="android:paddingLeft">15dp</item>
        <item name="android:background">@color/divider</item>
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar.Small">
        <item name="android:indeterminateDrawable">@drawable/progress</item>
        <item name="android:indeterminateBehavior">cycle</item>
        <item name="android:minWidth">32dip</item>
        <item name="android:maxWidth">32dip</item>
        <item name="android:minHeight">32dip</item>
        <item name="android:maxHeight">32dip</item>
    </style>

    <style name="ProgressBarTextStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/item_text</item>
        <item name="android:textSize">9sp</item>
        <item name="android:text">@string/loading</item>
        <item name="android:paddingTop">10dp</item>
    </style>

</resources>