<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.epam.android.social"
    android:versionCode="1"
    android:versionName="1.0" >

    <uses-sdk android:minSdkVersion="8" />

    <uses-permission android:name="android.permission.INTERNET" />
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE" />
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:name=".SocialApplication"
        android:icon="@drawable/ic_launcher"
        android:label="@string/app_name"
        android:theme="@style/ApplicationTheme" >
        <activity
            android:name=".MainFragmentActivity"
            android:label="@string/app_name" >
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".TwitterActivity" />
        <activity android:name=".TwitterLoginActivity" />
        <activity android:name=".FacebookLoginActivity" />
        <activity
            android:name=".SearchFragmentActivity"
            android:configChanges="orientation"
            android:theme="@style/Theme.PageIndicatorDefaults" />
        
        <activity
            android:name=".TwitterTimeLineFragmentActivity"
            android:configChanges="orientation"
            android:theme="@style/Theme.PageIndicatorDefaults" />
        <activity
            android:name=".facebook.ListStatusesActivity"
            android:configChanges="orientation"
            android:theme="@style/Theme.PageIndicatorDefaults" />
    </application>

</manifest>