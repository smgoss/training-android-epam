<?xml version="1.0" encoding="utf-8"?>
<resources>

    <style name="ListViewStyle" parent="@android:style/Widget.ListView">
        <item name="android:listSelector">@drawable/list_item</item>
        <item name="android:divider">@color/red</item>
        <item name="android:dividerHeight">2dip</item>
    </style>

    <style name="TextViewStyle" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/green</item>
        <item name="android:textSize">16dp</item>
    </style>

    <style name="TextViewWhite" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/white</item>
        <item name="android:textStyle">bold</item>
    </style>

    <style name="TextViewWhiteBig" parent="@style/TextViewWhite">
        <item name="android:textSize">20dp</item>
    </style>

    <style name="TextViewWhiteSmall" parent="@style/TextViewWhite">
        <item name="android:textSize">15dp</item>
    </style>

    <style name="TextViewRed" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/red</item>
        <item name="android:textSize">14dp</item>
        <item name="android:textStyle">italic</item>
    </style>

    <style name="TextViewBlue" parent="@android:style/Widget.TextView">
        <item name="android:textColor">@color/deep_blue</item>
        <item name="android:textStyle">bold</item>
        <item name="android:textSize">18dp</item>
    </style>

    <style name="ProgressBarStyle" parent="@android:style/Widget.ProgressBar">
        <item name="android:indeterminateDrawable">@drawable/progress_medium</item>
        <item name="android:indeterminateBehavior">cycle</item>
        <item name="android:minWidth">36dip</item>
        <item name="android:maxWidth">36dip</item>
        <item name="android:minHeight">36dip</item>
        <item name="android:maxHeight">36dip</item>
    </style>

    <style name="Toast" parent="MatchParent">
        <item name="android:background">@drawable/bg_toast</item>
        <item name="android:gravity">center</item>
        <item name="android:padding">25dp</item>
        <item name="android:orientation">vertical</item>
    </style>

    <style name="Toast_Title" parent="WrapContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:textSize">20dp</item>
        <item name="android:textStyle">bold</item>
        <item name="android:paddingBottom">15dp</item>
    </style>

    <style name="Toast_Text" parent="WrapContent">
        <item name="android:textColor">@color/black</item>
        <item name="android:gravity">center_horizontal</item>
        <item name="android:textSize">17dp</item>
    </style>

    <style name="MatchParent">
        <item name="android:layout_width">fill_parent</item>
        <item name="android:layout_height">fill_parent</item>
    </style>

    <style name="WrapContent" parent="">
        <item name="android:layout_width">wrap_content</item>
        <item name="android:layout_height">wrap_content</item>
    </style>

</resources>